@model IEnumerable<mct_timer.Models.Background>

@{
    ViewData["Title"] = "View";
}
<div class="bglist-bg">
<table class="bglist" cellpadding="5">
    <thead>
        <tr class="bglist-title">
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BgType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="bglist-record">
            <td>
               <img class="icons" src="@Html.DisplayFor(modelItem => item.Url)"
                             
               />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BgType)
            </td>
            <td>
                <a href="@Url.Action("deletebg", "Home", new {  bgid=item.id })" title="Delete Background">
                    <img alt="Delete" src="~/icons/del.png" width="75px"> 
                </a>
            </td>
        </tr>
}   
      
    </tbody>
</table>
</div>
